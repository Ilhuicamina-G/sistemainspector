    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informacion del comercio"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="@color/grisClaro"
                    android:background="@color/grisoscuro"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/giro" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Edittexparadatos"
                    android:paddingLeft="2dp"
                    android:paddingBottom="10dp"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/giro_comerciante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="GIRO O ACTIVIDAD COMERCIAL:"
                        android:editable="false"
                        android:enabled="false"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView

                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/descripcion" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Edittexparadatos"
                    android:paddingLeft="2dp"
                    android:paddingBottom="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/descripcion_comerciante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DESCRIPCIÓN:"
                        android:editable="false"
                        android:enabled="false"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/permiso" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Edittexparadatos"
                    android:paddingLeft="2dp"
                    android:paddingBottom="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/permiso_comerciante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TIPO DE PERMISO:"
                        android:editable="false"
                        android:enabled="false"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/horario" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="  HORARIO:"
                    android:textColor="@color/editTextColorBlack"
                    android:textSize="13sp"             />

                    <android.support.v7.widget.RecyclerView
                        android:paddingLeft="7dp"
                        android:paddingTop="10dp"
                        android:id="@+id/recycle_horas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/direccion"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Edittexparadatos"
                    android:paddingLeft="2dp"
                    android:paddingBottom="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/direccion_comerciante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DIRECCIÓN:"
                        android:editable="false"
                        android:enabled="false"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/zona"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Edittexparadatos"
                    android:paddingLeft="2dp"
                    android:paddingBottom="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/zona_comerciante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ZONA SOLICITADA:"
                        android:editable="false"
                        android:enabled="false"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/editTextColorBlack"
                android:textStyle="bold"
                android:text="@string/estructura"
                android:textSize="@dimen/textsize_h1_info_comerciante"/>

            <TextView
                android:id="@+id/estructura_comerciante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/editTextColorBlack"
                android:text="Food Truck"
                android:textSize="@dimen/textsize_h1_info_comerciante"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.8"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imagen_estructura"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/comerciante200x200"

                    />

                <Button
                    android:id="@+id/descargarpdf"
                    android:theme="@style/RaisedButtonDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descargar PDF"
                    android:visibility="gone"
                    />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.NestedScrollView>